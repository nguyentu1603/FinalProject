
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!--state overview start-->
<section class="panel">
    <header class="panel-heading">
        Thông tin tổng quan
    </header>

    <div class="panel-body row state-overview">
        <div class="col-lg-3 col-sm-6">
            <section class="panel" style="background:#f1f2f7">
                <div class="symbol terques">
                    <i class="icon-th"></i>
                </div>
                <div class="value">
                    <h1 class="count">
                        @ViewBag.CountProducts
                    </h1>
                    <p>Sản phẩm</p>
                </div>
            </section>
        </div>
        <div class="col-lg-3 col-sm-6">
            <section class="panel" style="background:#f1f2f7">
                <div class="symbol red">
                    <i class="icon-shopping-cart"></i>
                </div>
                <div class="value">
                    <h1 class=" count2">
                        @ViewBag.CountOrders
                    </h1>
                    <p>Đơn đặt hàng</p>
                </div>
            </section>
        </div>
        <div class="col-lg-6 col-sm-12">
            <div id="carousel-example-generic" class="panel carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="~/Content/slide0.png" />
                    </div>
                    <div class="item">
                        <img src="~/Content/slide.jpg" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--state overview end-->
