@using EcomShoes_Webshop.Models;
@model List<Cart>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    img {
        vertical-align: middle;
        width: 100px;
    }
</style>
<body>
    <!-- banner -->
    <!-- //banner -->
    <!-- top Products -->
    <div class="ads-grid_shop">
        <div class="shop_inner_inf">
            <div class="privacy about">
                <h3>Chec<span>kout</span></h3>
                <div class="checkout-right">
                    <h4>Số lượng sản phẩm: <span>@Html.Action("PartialSoLuong", "ShoppingCart") Sản phẩm trong giỏ hàng</span> | @Html.ActionLink("Chỉnh sửa giỏ hàng", "EditShoppingCart")
                    </h4>
                    <table class="timetable_sub">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quality</th>
                                <th>Product Name</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="rem1">
                                    <td class="invert-image">
                                    <img src="@Url.Content("~/manageProducts/Image/"+item.iMaSP)" alt=" "></td>
                                    <td class="invert">
                                        <div class="quantity">
                                            <div class="quantity-select">
                                                <div class="entry value"><span>@item.isoLuong</span></div>
                                            </div>
                                        </div>
                                    </td>
                                    <td >@item.iTenSP</td>
                                    <td >@item.thanhTien</td>  
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="checkout-left">
                    <div class="col-md-4 checkout-left-basket">
                        <h4>Tổng giá của đơn hàng</h4>
                        <ul>
                            <li>Total <i>-</i> <span> @Html.Action("PartialTotal", "ShoppingCart") VND </span></li>
                        </ul>
                       
                    </div>
                    <div class="checkout-right-basket">
                        <a href="@Url.Action("Create", "ManageOrders")" > Tiến hành đặt hàng
                        </a>
                    </div>
                
                </div>
            </div>
        </div>

    </div>
    <script type="application/x-javascript">
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
 