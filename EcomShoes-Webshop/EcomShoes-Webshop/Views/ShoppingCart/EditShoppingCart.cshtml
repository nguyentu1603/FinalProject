<div class="ads-grid_shop">
    <div class="shop_inner_inf">
        <div class="privacy about">
            <h3>Chec<span>kout</span></h3>
            <div class="checkout-right">
                <h4>Your shopping cart contains: <span>3 Products</span></h4>
                <table class="timetable_sub">
                    <thead>
                        <tr>
                            <th>Product</th>                 
                            <th>Product Name</th>
                            <th>Quanitity</th>
                            <th>Price</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="invert-image">
                                    <img src="@Url.Content("~/manageProducts/Image/"+item.iMaSP)" alt=" ">
                                </td>
                                <td>
                                     <p class="font-large table-title">@item.iTenSP</p>
                                </td>
                                <td>
                                    @using (Html.BeginForm("UpdateShoppingCart", "ShoppingCart", new { @iMaSP = item.iMaSP }))
                                    {
                                        <p>
                                            @Html.TextBox("txtSoLuong", item.isoLuong)
                                            <input type="submit" value="Thay đổi" />
                                        </p>
                                      
                                    }
                                </td>
                                <td>
                                    @string.Format("{0:0,0}", item.idonGia.ToString()) VND       
                                </td>                          
                                <td class="product-remove">
                                    <a href="#" class="remove" title="Remove this item">
                                        <i class="fa fa-trash-o"></i>
                                        @Html.ActionLink("xoa", "DeleteShoppingCart", new { @iMaSP = item.iMaSP })
                                    </a>
                                </td>
                            </tr>
                        }


