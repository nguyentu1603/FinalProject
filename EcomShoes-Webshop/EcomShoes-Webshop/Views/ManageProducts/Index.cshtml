@model IEnumerable<EcomShoes_Webshop.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="panel">
    <header class="panel-heading">
        Danh sách sản phẩm
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/ManageProducts/Create" class="btn green" style="border: 1px solid; background: gainsboro">
                        Tạo mới <i class="icon-plus"></i>
                    </a>
                </div>
            </div>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>
                            Loại sản phẩm
                        </th>
                        <th>
                            Mã sản phẩm
                        </th>
                        <th>
                            Tên sản phẩm
                        </th>
                        <th>
                            Hình ảnh
                        </th>
                        <th>
                            Giá bán
                        </th>
                        <th>
                            Giá gốc
                        </th>
                        <th>
                            Ngày tạo
                        </th>
                        <th>
                            Ngày cập nhật
                        </th>
                        <th>
                            Tình trạng
                        </th>
                        <th>
                            Số lượng tồn
                        </th>
                        <th>Chỉnh sửa</th>
                        <th>Thông tin</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category.NameCategory)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>
                            <td>
                                <img src="@Url.Action("Image", new { id = item.ID})" style="width: 80px" />
                            </td>
                            <td>
                                @item.SalePrice.ToString("N0") VNĐ
                            </td>
                            <td>
                                @item.OriginalPrice.ToString("N0") VNĐ
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UpdateDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-warning btn-xs"})
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.ID },htmlAttributes: new { @class = "btn btn-primary btn-xs" })
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-danger btn-xs" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
