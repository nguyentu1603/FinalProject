@using EcomShoes_Webshop.Models
@model List<ContactDetail>
@{Layout = null;}

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="panel-body">
    <header class="panel-heading">
        Danh sách thông tin liên hệ
    </header>
    <div class="adv-table editable-table ">
        <div class="clearfix">

        </div>
        <div class="space15"></div>
        <div id="editable-sample_wrapper" class="dataTables_wrapper form-inline" role="grid">
            <div class="row"><div class="col-lg-6"><div id="editable-sample_length" class="dataTables_length"></div></div><div class="col-lg-6"><div class="dataTables_filter" id="editable-sample_filter"></div></div></div><table class="table table-striped table-hover table-bordered dataTable" id="editable-sample" aria-describedby="editable-sample_info">
                <thead>
                    <tr role="row">
                        <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label="
                            NameCompany
                        " style="width: 224px;">
                            ContactID
                        </th>
                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" aria-label="
                            Address
                        : activate to sort column ascending" style="width: 241px;">
                            Create time
                        </th>
                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" aria-label="
                            Phone
                        : activate to sort column ascending" style="width: 160px;">
                            Message
                        </th>
                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" aria-label="
                            Email
                        : activate to sort column ascending" style="width: 296px;">
                            Employee Reply
                        </th>
                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" aria-label="Edit: activate to sort column ascending" style="width: 91px;">ViewDetail</th>
                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" aria-label="Delete: activate to sort column ascending" style="width: 122px;">Edit</th>
                    </tr>
                </thead>
                <tbody role="alert" aria-live="polite" aria-relevant="all">

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <mark>@item.ContactID</mark>
                            </td>
                            <td>
                                @item.CreatedDate
                            </td>
                            <td>
                                @item.Message
                            </td>
                            <td>
                                @item.EmployeeName

                            </td>
                            <td>
                                <a href="@Url.Action("Details", new { id = item.ContactID})">Detail</a>

                            </td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.id})">Edit</a>

                            </td>
                        </tr>
                    }
                </tbody>

            </table>
            <div class="row">
                <div class="col-lg-6">

                </div><div class="col-lg-6">
                    <div class="dataTables_paginate paging_bootstrap pagination">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>